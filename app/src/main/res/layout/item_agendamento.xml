<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_barbeiro_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbeiro: Nome do Barbeiro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#154360"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Agendado"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_data_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data e Hora: 20/12/2025 às 10:30"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_servico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviço: Corte e Barba"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:text="Cancelar"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_red_dark"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>